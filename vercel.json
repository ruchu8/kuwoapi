{
  "version": 2,
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "builds": [
    {
      "src": "api/**/*.php",
      "use": "vercel-php@0.6.0",
      "config": {
        "phpVersion": "7.4"
      }
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/info",
      "dest": "api/info.php"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.php"
    },
    {
      "src": "/public/(.*)",
      "dest": "public/$1"
    }
  ]
}
    
